<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="?android:attr/selectableItemBackground">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_file"
            app:layout_constraintStart_toStartOf="@id/tvFormat"
            app:layout_constraintEnd_toEndOf="@id/tvFormat"
            app:layout_constraintTop_toTopOf="@id/tvFormat"
            app:layout_constraintBottom_toBottomOf="@id/tvFormat" />

    <TextView
            android:id="@+id/tvFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text=".ogg"
            android:padding="14dp"
            android:textColor="#fff"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Filename 1"
            android:padding="12dp"
            android:textColor="#000"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/tvFormat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>