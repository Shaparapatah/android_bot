<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<pro.salebot.mobileclient.ui.views.MySlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="#F0F0F0"
        tools:context=".mvp.rooms.RoomsFragment">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->

    <include layout="@layout/drawer_menu" />

    <include layout="@layout/view_content" />

</pro.salebot.mobileclient.ui.views.MySlidingMenu>